<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
    <item>
        <shape>
            <solid android:color="#FFF" />
            <padding
                    android:bottom="2dp"
                    android:left="2dp"
                    android:right="2dp"
                    android:top="2dp" />
            <corners android:radius="10dp"/>

        </shape>
    </item>
<item>
    <shape>
        <solid android:color="@color/colorAccent" />
        <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

        <corners android:radius="10dp" />
    </shape>
</item>
<item>
    <shape>
        <solid android:color="#FFF" />
    <corners android:radius="10dp"/>

</shape>
</item>
</layer-list>